#ifndef _LIB_SNLOG_HEADER_
#define _LIB_SNLOG_HEADER_

#include <iostream>

#cmakedefine USE_ANSI_COLORS

namespace snlog {

#ifdef USE_ANSI_COLORS

#define s_nfg_blk "\033[0;30m"
#define s_nfg_red "\033[0;31m"
#define s_nfg_gre "\033[0;32m"
#define s_nfg_ylw "\033[0;33m"
#define s_nfg_blu "\033[0;34m"
#define s_nfg_mag "\033[0;35m"
#define s_nfg_cya "\033[0;36m"
#define s_nfg_wit "\033[0;37m"

#define s_bfg_blk "\033[1;30m"
#define s_bfg_red "\033[1;31m"
#define s_bfg_gre "\033[1;32m"
#define s_bfg_ylw "\033[1;33m"
#define s_bfg_blu "\033[1;34m"
#define s_bfg_mag "\033[1;35m"
#define s_bfg_cya "\033[1;36m"
#define s_bfg_wit "\033[1;37m"

#define s_nbg_blk "\033[0;40m"
#define s_nbg_red "\033[0;41m"
#define s_nbg_gre "\033[0;42m"
#define s_nbg_ylw "\033[0;43m"
#define s_nbg_blu "\033[0;44m"
#define s_nbg_mag "\033[0;45m"
#define s_nbg_cya "\033[0;46m"
#define s_nbg_wit "\033[0;47m"

#define s_reset   "\033[0m"
    template<typename printable>
    inline void l_message(const printable& msg)
    { std::cerr << "-- "                                  << msg << s_reset << std::endl; }
    template<typename printable>
    inline void l_info(const printable& msg)
    { std::cerr << s_bfg_blu << "INFO: "     << s_nfg_blu << msg << s_reset << std::endl; }
    template<typename printable>
    inline void l_warn(const printable& msg)
    { std::cerr << s_bfg_ylw << "WARNING: "  << s_nfg_ylw << msg << s_reset << std::endl; }
    template<typename printable>
    inline void l_error(const printable& msg)
    { std::cerr << s_bfg_red << "ERROR: "    << s_nfg_red << msg << s_reset << std::endl; }
    template<typename printable>
    inline void l_internal(const printable& msg)
    { std::cerr << s_bfg_red << "INTERNAL: " << s_nfg_mag << msg << s_reset << std::endl; }
    template<typename printable>
    inline void l_fatal(const printable& msg)
    { std::cerr << s_bfg_red << "FATAL: "    << s_bfg_red << msg << s_reset << std::endl; }
#else
    template<typename printable>
    inline void l_message(const printable& msg)  { std::cerr << "-- "        << msg << std::endl; }
    template<typename printable>
    inline void l_info(const printable& msg)     { std::cerr << "INFO: "     << msg << std::endl; }
    template<typename printable>
    inline void l_warn(const printable& msg)     { std::cerr << "WARNING: "  << msg << std::endl; }
    template<typename printable>
    inline void l_error(const printable& msg)    { std::cerr << "ERROR: "    << msg << std::endl; }
    template<typename printable>
    inline void l_internal(const printable& msg) { std::cerr << "INTERNAL: " << msg << std::endl; }
    template<typename printable>
    inline void l_fatal(const printable& msg)    { std::cerr << "FATAL: "    << msg << std::endl; }
#endif
    template<typename printable>
    inline void t_message(bool test, const printable& msg)  { if(test) l_message(msg); }
    template<typename printable>
    inline void t_info(bool test, const printable& msg)     { if(test) l_info(msg); }
    template<typename printable>
    inline void t_warn(bool test, const printable& msg)     { if(test) l_warn(msg); }
    template<typename printable>
    inline void t_error(bool test, const printable& msg)    { if(test) l_error(msg); }
    template<typename printable>
    inline void t_internal(bool test, const printable& msg) { if(test) l_internal(msg); }
    template<typename printable>
    inline void t_fatal(bool test, const printable& msg)    { if(test) l_fatal(msg); }
};

#endif
