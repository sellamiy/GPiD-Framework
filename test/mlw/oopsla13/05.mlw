module Oopsla05
 use int.Int
 use ref.Ref

 val unknown (unit) : bool

 let main (flag: bool) : unit
  diverges
 = let x = ref 0 in let y = ref 0 in let j = ref 0 in let i = ref 0 in

   while unknown() do
    invariant { !j >= !i /\ !y >= !x }
    x := !x + 1;
    y := !y + 1;
    i := !i + !x;
    j := !j + !y;
    if flag then j := !j + 1
   done;

   assert { !j >= !i }

end
