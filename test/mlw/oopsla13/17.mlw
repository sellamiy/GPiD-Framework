module Oopsla17
 use int.Int
 use ref.Ref

 let main(n: int) : unit
  diverges
 = let k = ref 1 in let i = ref 1 in let j = ref 0 in

   while !i < n do
    invariant { true }
    j := 0;
    while !j < !i do
     invariant { true }
     k := !k + !i - !j;
     j := !j + 1
    done;
    i := !i + 1;
   done;

   assert { !k >= n }

end
